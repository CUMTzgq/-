<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                                              android:layout_width="match_parent"
                                              android:layout_height="match_parent"
                                              xmlns:app="http://schemas.android.com/apk/res-auto"
                                              android:orientation="vertical">
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1e90ff"
            android:orientation="vertical">
        <View
                android:layout_width="match_parent"
                android:layout_height="30dp" android:id="@+id/view"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

            <TextView
                    android:text="我的"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                  android:layout_height="300dp"
                                                  android:background="@drawable/topbg" android:orientation="vertical">
        <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent" android:layout_height="wrap_content">
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent" android:layout_height="0dp"
                                                      android:layout_weight="1">
            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="wrap_content"
                                                               android:layout_height="wrap_content"
                                                               android:layout_gravity="center_vertical"
                                                               android:layout_marginStart="30dp"
                                                               android:id="@+id/zh1"
                                                               android:clickable="true">
                <ImageButton android:layout_width="80dp"
                             android:layout_height="80dp"
                             android:id="@+id/touxiangbtn"
                             android:background="@drawable/backgroundoval"
                             android:src="@drawable/ic_touxiang"
                             app:layout_constraintStart_toStartOf="parent"
                             app:layout_constraintTop_toTopOf="parent"
                             app:layout_constraintBottom_toBottomOf="parent"
                             android:clickable="false"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="立即登录"
                          android:textSize="30dp"
                          android:textColor="@color/white"
                          android:id="@+id/name"
                          app:layout_constraintStart_toEndOf="@+id/touxiangbtn"
                          android:layout_marginStart="10dp"
                          app:layout_constraintBottom_toBottomOf="@+id/touxiangbtn"
                          app:layout_constraintTop_toTopOf="@id/touxiangbtn"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                  android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                           android:layout_height="wrap_content"
                                           android:layout_margin="10dp"
                                           app:cardCornerRadius="10dp" android:elevation="@dimen/cardview_compat_inset_shadow" >
            <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                          android:layout_height="match_parent"
                                                          android:padding="10dp">
                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="wrap_content"
                                                                   android:layout_height="wrap_content"
                                                                   android:id="@+id/zh2"
                                                                   android:layout_weight="1">

                    <ImageView android:layout_width="50dp" android:layout_height="50dp" android:id="@+id/mineaccbtn"
                                android:background="@drawable/backgroundoval"
                               android:src="@drawable/ic_mineacc"
                               app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                               app:layout_constraintEnd_toEndOf="parent" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="我的账户"
                              app:layout_constraintStart_toStartOf="@id/mineaccbtn" app:layout_constraintEnd_toEndOf="@id/mineaccbtn"
                              app:layout_constraintTop_toBottomOf="@id/mineaccbtn"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="wrap_content"
                                                                   android:layout_height="wrap_content"
                                                                   android:id="@+id/zcbtn"
                                                                   android:layout_weight="1">

                    <ImageView android:layout_width="50dp" android:layout_height="50dp" android:id="@+id/minezcbtn"
                                android:background="@drawable/backgroundoval"
                               app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                               app:layout_constraintEnd_toEndOf="parent" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="我的资产"
                              app:layout_constraintStart_toStartOf="@id/minezcbtn" app:layout_constraintEnd_toEndOf="@id/minezcbtn"
                              app:layout_constraintTop_toBottomOf="@id/minezcbtn"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="wrap_content"
                                                                   android:layout_height="wrap_content"
                                                                   android:id="@+id/traderecord"
                                                                   android:layout_weight="1">

                    <ImageView android:layout_width="50dp" android:layout_height="50dp" android:id="@+id/minejlbtn"
                                android:background="@drawable/backgroundoval"
                               app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                               app:layout_constraintEnd_toEndOf="parent" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="交易记录"
                              app:layout_constraintStart_toStartOf="@id/minejlbtn" app:layout_constraintEnd_toEndOf="@id/minejlbtn"
                              app:layout_constraintTop_toBottomOf="@id/minejlbtn"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>



        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>